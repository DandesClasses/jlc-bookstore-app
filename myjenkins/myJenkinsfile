pipeline {
agent any
    stages {
        stage('Build on k8 ') {
            steps {           
                        sh 'pwd'
                        sh 'cp -R myhelm-charts/* . '
	                sh 'ls -ltr'
                        sh 'pwd'
                        sh '/usr/local/bin/helm upgrade --install jlc-mysql-app  jlc-mysql-chart'
                        sh '/usr/local/bin/helm upgrade --install jlc-bookstore-app jlc-bookstore-chart'
            }           
        }
    }
}
